                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:id="@+id/imgViewSemaforo"
                android:src="@drawable/semaforo_verde"
                android:layout_below="@+id/tVRegresar"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tVVerCorrecta"
                android:text="@string/validacion_correcta"
                android:textColor="@color/verde"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tVRegresar"
                android:paddingRight="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tVAccionHabilitada"
                android:text="@string/accion_habilitada"
                android:textColor="@color/gris_letra"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tVVerCorrecta"
                android:layout_marginLeft="10dp"

                android:paddingRight="5dp"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:id="@+id/btnProceder"
                android:text="@string/proceder"
                style="@style/BotonesPantallas"
                android:background="@drawable/boton_rojo"
                android:enabled="false"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/imgViewSemaforo"
                android:layout_below="@+id/tVAccionHabilitada"/>-->

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>


