<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/imgViewLogoInnovative"
        android:src="@drawable/logo_innovative"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.CardViews"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relLayoutSemaforo"
                android:paddingLeft="15dp"
                android:paddingRight="20dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tVRegresar"
                    android:text="Regresar"
                    android:textColor="@color/negro"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:drawableLeft="@drawable/left_back"
                    android:drawablePadding="10dp"
                    app:drawableTint="@color/celeste"
                    android:layout_marginBottom="15dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgViewSemaforo"
                    android:layout_below="@+id/tVRegresar"
                    android:adjustViewBounds="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/relLayoutSemaforo"
                android:layout_gravity="center_horizontal|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tVVerCorrecta"
                    android:textColor="@color/verde"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tVAccionHabilitada"
                    android:text="@string/accion_habilitada"
                    android:textColor="@color/gris_letra"
                    android:textSize="13sp"
                    android:layout_below="@+id/tVVerCorrecta"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnProceder"
                    android:text="@string/proceder"
                    style="@style/BotonesPantallas"
                    android:background="@drawable/boton_rojo"
                    android:layout_below="@+id/tVAccionHabilitada"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>

            </RelativeLayout>

            <!--<com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tVRegresar"
                android:text="Regresar"
                android:textColor="@color/negro"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:drawableLeft="@drawable/left_back"
                android:drawablePadding="10dp"
                app:drawableTint="@color/celeste"/>

